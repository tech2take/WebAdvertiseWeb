@{
    ViewData["Title"] = "SignIn Page";
}

@model WebAdvertiseWeb.Models.Accounts.SignIn;

<div class="row">
    <div class="col-md-4">
        <h4>Login with your Email and Password</h4>
        <h5>
            <a asp-controller="Accounts" asp-action="Signup">
                If you are not a member, you can signup here..
            </a>
        </h5>
        <form method="post" asp-controller="Accounts" asp-action="SignIn">
            <h4>Create a new account</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger">

            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe"></label>
                    <input asp-for="RememberMe" class="form-control" />
                    @Html.DisplayName("Remember Me")
                </div>
                <a asp-controller="Accounts" asp-action="Forget">Forget Password</a>
            </div>

            <button type="submit" class="btn btn-default" value="Login">Login</button>
        </form>

    </div>
</div>